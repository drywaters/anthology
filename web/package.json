{
    "name": "web",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test --watch=false --browsers=ChromeHeadless",
        "test-watch": "ng test --browsers=Chrome",
        "lint": "ng lint && stylelint \"src/**/*.scss\" && prettier --check \"src/**/*.{ts,html,scss,json}\"",
        "lint:fix": "ng lint --fix && stylelint \"src/**/*.scss\" --fix && prettier --write \"src/**/*.{ts,html,scss,json}\"",
        "format": "prettier --write \"src/**/*.{ts,html,scss,json}\""
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 4,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^20.3.9",
        "@angular/cdk": "^20.2.11",
        "@angular/common": "^20.3.9",
        "@angular/compiler": "^20.3.9",
        "@angular/core": "^20.3.9",
        "@angular/forms": "^20.3.9",
        "@angular/material": "^20.2.11",
        "@angular/platform-browser": "^20.3.9",
        "@angular/router": "^20.3.9",
        "@zxing/browser": "^0.1.5",
        "@zxing/library": "^0.21.3",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-eslint/builder": "^20.6.0",
        "@angular-eslint/eslint-plugin": "^20.6.0",
        "@angular-eslint/eslint-plugin-template": "^20.6.0",
        "@angular-eslint/schematics": "^20.6.0",
        "@angular-eslint/template-parser": "^20.6.0",
        "@angular/build": "^20.3.8",
        "@angular/cli": "^20.3.8",
        "@angular/compiler-cli": "^20.3.9",
        "@types/jasmine": "~5.1.0",
        "@typescript-eslint/eslint-plugin": "^8.12.2",
        "@typescript-eslint/parser": "^8.12.2",
        "eslint": "^9.13.0",
        "jasmine-core": "~5.9.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "prettier": "^3.7.4",
        "stylelint": "^16.26.1",
        "stylelint-config-standard-scss": "^16.0.0",
        "typescript": "~5.9.2"
    }
}
